file "testsave" => ["testsave.c"] do
  sh "libtool --mode=link gcc -g -Wall testsave.c -o testsave $(pkg-config --cflags --libs gstreamer-1.0)"
end

file "testserver" => ["testserver.c"] do
  sh "libtool --mode=link gcc -g -Wall testserver.c -o testserver $(pkg-config --cflags --libs gstreamer-1.0 gstreamer-rtsp-server-1.0)"
end

task :default => ["testsave","testserver"]
