#!/usr/bin/env ruby

if ARGV.size != 2
  $stderr.puts "Usage camerasink <source> <outputdir>"
  exit 2
end

require 'fileutils'

ENV['RAILS_ENV'] ||= 'production'
# Load the Rails application.
require File.expand_path('../config/application', File.dirname(__FILE__))
Camerasink::BASEDIR = ARGV[1]
FileUtils.mkdir_p Camerasink::BASEDIR
app = Camerasink::Application.initialize!

Rack::Server.new(:app => app).start
