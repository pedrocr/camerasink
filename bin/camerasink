#!/usr/bin/env ruby

if ARGV.size != 2
  $stderr.puts "Usage camerasink <source> <outputdir>"
  exit 2
end

ENV['RAILS_ENV'] ||= 'development'               
require File.expand_path("../config/environment", File.dirname(__FILE__))

p Block.all

camera = Camera.new
camera.name = "test"
camera.source = ARGV[0]
camera.basedir = ARGV[1]
camera.save!
camera.run
